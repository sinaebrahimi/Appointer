<!DOCTYPE html>

<html lang="fa" dir="rtl">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Sina Ebrahimi">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="contact" content="info@site.com" />
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="" />
    <meta name="twitter:description" content="" />
    <meta name="twitter:site" content="Appointer" />
    <meta name="twitter:creator" content="Sina_Ebrahimi" />
    <meta name="twitter:url" content="http://Appointer.com/" />
    <meta name="twitter:image" content="img/114x114.png" />

    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="http://Appointer.com/" />
    <meta property="og:site_name" content="Appointer.com" />
    <meta property="og:description" content="" />
    <meta property="og:locale" content="fa_IR" />
    <meta property="og:locale:alternate" content="en_US" />
    <meta property="og:image" content="img/114x114.png" />

    <link rel="icon" type="image/ico" href="favicon.ico">
    <link rel="icon" type="image/png" href="img/114x114.png"><!-- Opera Speed Dial, at least 144×114 px -->
    <link rel="apple-touch-icon" type="image/png" sizes="57x57" href="img/57x57.png"><!-- iPhone -->
    <link rel="apple-touch-icon" type="image/png" sizes="79x79" href="img/79x79.png"><!-- iPad -->
    <link rel="apple-touch-icon" type="image/png" sizes="114x114" href="img/114x114.png"><!-- iPhone4 -->

    <link rel="canonical" href="http://Appointer.com/" />

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    @Html.Partial("~/Views/shared/_Header.cshtml")
    <div id="body">
        @if (Session["userRole"] == null)
        {
            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li>
                        <a href="~/Home/Index">
                            <span class="fa fa-home" aria-hidden="true"></span><br>خانه
                        </a>
                    </li>

                    <hr />

                    <li>
                        <a href="~/Main/Jobs">
                            <span class="fa fa-map-marker" aria-hidden="true"></span><br>مشاغل
                        </a>
                    </li>

                    <hr />

                    <li>
                        <a href="~/AboutUs.html">
                            <span class="fa fa-info-circle" aria-hidden="true"></span><br>درباره ما
                        </a>
                    </li>
                </ul>
            </div>
        }
        else if (Session["userRole"].ToString() == "JobCorp")
        {
            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li>
                        <a href="~/JCDashboard/AddWorkingTime">
                            <span class="fa fa-home" aria-hidden="true"></span><br>روزهای‌کاری هفتگی
                        </a>
                    </li>
                    <li>
                        <a href="~/JCDashboard/AppointmentList">
                            <span class="fa fa-book" aria-hidden="true"></span><br>لیست رزروها
                        </a>
                    </li>
                    <li>
                        <a href="~/JCDashboard/AddWorkingDate">
                            <span class="fa fa-book" aria-hidden="true"></span><br>افزودن روز کاری
                        </a>
                    </li>

                    <li>
                        <a href="~/Services/Index">
                            <span class="fa fa-book" aria-hidden="true"></span><br>سرویس ها
                        </a>
                    </li>
                    <li>
                        <a href="~/Main/Jobs">
                            <span class="fa fa-map-marker" aria-hidden="true"></span><br>شغل‌ها
                        </a>
                    </li>
                </ul>
            </div>

        }


        else if (Session["userRole"].ToString() == "JobOwner")
        {

            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li>
                        <a href="~/Jobs/Edit">
                            <span class="fa fa-book" aria-hidden="true"></span><br>ویرایش شغل
                        </a>
                    </li>
                    <li>
                        <a href="~/Jobs/JobCorpsList">
                            <span class="fa fa-book" aria-hidden="true"></span><br>لیست همکاران
                        </a>
                    </li>
                    <li>
                        <a href="~/JCDashboard/AddWorkingTime">
                            <span class="fa fa-home" aria-hidden="true"></span><br>روزهای‌کاری هفتگی
                        </a>
                    </li>
                    <li>
                        <a href="~/JCDashboard/AppointmentList">
                            <span class="fa fa-book" aria-hidden="true"></span><br>لیست رزروها
                        </a>
                    </li>
                    <li>
                        <a href="~/Services/Index">
                            <span class="fa fa-book" aria-hidden="true"></span><br>سرویس ها
                        </a>
                    </li>
                    <li>
                        <a href="~/Main/Jobs">
                            <span class="fa fa-map-marker" aria-hidden="true"></span><br>شغل‌ها
                        </a>
                    </li>
                </ul>
            </div>
        }


        else if (Session["userRole"].ToString() == "Admin")
        {

            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li>
                        <a href="~/Admin/Index">
                            <span class="fa fa-book" aria-hidden="true"></span><br>پنل ادمین
                        </a>
                    </li>
                    <hr>
                </ul>
            </div>
        }
        else
        {
            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li>
                        <a href="~/Home/Index">
                            <span class="fa fa-home" aria-hidden="true"></span><br>خانه
                        </a>
                    </li>

                    <hr>

                    <li>
                        <a href="~/Main/Jobs">
                            <span class="fa fa-map-marker" aria-hidden="true"></span><br>مشاغل
                        </a>
                    </li>

                    <hr>

                    <li>
                        <a href="~/Main/Reservations">
                            <span class="fa fa-book" aria-hidden="true"></span><br>رزروهای آتی
                        </a>
                    </li>

                    <hr />

                    <li>
                        <a href="~/AboutUs.html">
                            <span class="fa fa-info-circle" aria-hidden="true"></span><br>درباره ما
                        </a>
                    </li>
                </ul>
            </div>
        }

        @RenderSection("featured", required: false)
        <div class="main-container col-xs-12">
            @RenderBody()
        </div>
    </div>

    @RenderSection("scripts", required: false)
    @RenderSection("JavaScript", required: false)
    @RenderSection("CSS", required: false)

</body>
</html>