@model DateTime?

@Html.TextBoxFor(model => model, new
{
    @class = "text-center",
    data_val = "true",
    data_val_regex = "تاریخ ثبت را بدرستی وارد کنید",
    data_val_regex_pattern = @"^(13\d{2}|[1-9]\d)/(1[012]|0?[1-9])/([12]\d|3[01]|0?[1-9])$",
    onclick = "PersianDatePicker.Show(this, '" + DateTime.Now.ToPersianDateTime().ToString("yyyy/MM/dd") + "');"
})