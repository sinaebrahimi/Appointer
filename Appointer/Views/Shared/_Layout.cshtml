<!DOCTYPE html>

<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.js"></script>


    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)



</head>
<body>
    @Html.Partial("~/Views/shared/_Header.cshtml")
    <div id="body">
        @if (Session["userRole"] == null)
        {

            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li>
                        <a href="~/Home/Index">
                            <span class="fa fa-home" aria-hidden="true"></span><br>خانه
                        </a>
                    </li>
                    <hr />

                    <li>
                        <a href="~/Main/Jobs">
                            <span class="fa fa-map-marker" aria-hidden="true"></span><br>مشاغل
                        </a>
                    </li>
                    <hr />
                    <li>
                        <a href="~/AboutUs.html">
                            <span class="fa fa-info-circle" aria-hidden="true"></span><br>درباره ما
                        </a>
                    </li>
                </ul>
            </div>


        }
        else if (Session["userRole"].ToString() == "JobCorp")
        {


            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li>
                        <a href="~/JCDashboard/AddWorkingTime">
                            <span class="fa fa-home" aria-hidden="true"></span><br>روزهای‌کاری هفتگی
                        </a>
                    </li>
                    <li>
                        <a href="~/JCDashboard/AppointmentList">
                            <span class="fa fa-book" aria-hidden="true"></span><br>لیست رزروها
                        </a>
                    </li>
                    <li>
                        <a href="~/JCDashboard/AddWorkingDate">
                            <span class="fa fa-book" aria-hidden="true"></span><br>افزودن روز کاری
                        </a>
                    </li>

                    <li>
                        <a href="~/Services/Index">
                            <span class="fa fa-book" aria-hidden="true"></span><br>سرویس ها
                        </a>
                    </li>
                    <li>
                        <a href="~/Main/Jobs">
                            <span class="fa fa-map-marker" aria-hidden="true"></span><br>شغل‌ها
                        </a>
                    </li>
                </ul>
            </div>

        }


        else if (Session["userRole"].ToString() == "JobOwner")
        {

            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li>
                        <a href="~/Jobs/Edit">
                            <span class="fa fa-book" aria-hidden="true"></span><br>ویرایش شغل
                        </a>
                    </li>
                    <li>
                        <a href="~/Jobs/JobCorpsList">
                            <span class="fa fa-book" aria-hidden="true"></span><br>لیست همکاران
                        </a>
                    </li>
                    <li>
                        <a href="~/JCDashboard/AddWorkingTime">
                            <span class="fa fa-home" aria-hidden="true"></span><br>روزهای‌کاری هفتگی
                        </a>
                    </li>
                    <li>
                        <a href="~/JCDashboard/AppointmentList">
                            <span class="fa fa-book" aria-hidden="true"></span><br>لیست رزروها
                        </a>
                    </li>
                    <li>
                        <a href="~/Services/Index">
                            <span class="fa fa-book" aria-hidden="true"></span><br>سرویس ها
                        </a>
                    </li>
                    <li>
                        <a href="~/Main/Jobs">
                            <span class="fa fa-map-marker" aria-hidden="true"></span><br>شغل‌ها
                        </a>
                    </li>
                 </ul>
            </div>
        }


        else if (Session["userRole"].ToString() == "Admin")
        {

            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li>
                        <a href="~/Admin/Index">
                            <span class="fa fa-book" aria-hidden="true"></span><br>پنل ادمین
                        </a>
                    </li>
                    <hr>
                </ul>
            </div>
        }
        else
        {




            <div class="sidebar">
                <ul class="sidebar-menu">
                    <li>
                        <a href="~/Home/Index">
                            <span class="fa fa-home" aria-hidden="true"></span><br>خانه
                        </a>
                    </li>
                    <hr>
                    <li>
                        <a href="~/Main/Jobs">
                            <span class="fa fa-map-marker" aria-hidden="true"></span><br>مشاغل
                        </a>
                    </li>
                    <hr>
                    <li>
                        <a href="~/Main/Reservations">
                            <span class="fa fa-book" aria-hidden="true"></span><br>رزروهای آتی
                        </a>
                    </li>

                    <hr />
                    <li>
                        <a href="~/AboutUs.html">
                            <span class="fa fa-info-circle" aria-hidden="true"></span><br>درباره ما
                        </a>
                    </li>
                </ul>
            </div>

        }





        @RenderSection("featured", required: false)
        <div class="main-container col-xs-12">
            @RenderBody()
        </div>
    </div>



                @Scripts.Render("~/bundles/jquery")
                @RenderSection("scripts", required: false)
                @RenderSection("JavaScript", required: false)
                @RenderSection("CSS", required: false)


</body>
</html>
